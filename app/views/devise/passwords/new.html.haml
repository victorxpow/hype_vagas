.container
  .row
    .col-md-6.order-md-2
      %img.img-fluid{:alt => "Image", :src => "https://preview.colorlib.com/theme/bootstrap/login-form-08/images/undraw_file_sync_ot38.svg"}/
    .col-md-6.contents
      .row.justify-content-center
        .col-md-8
          .mb-4
            %h3
              %strong Hype Vagas
            %p.mb-4 As empresas mais Hypadas do momento, esperam por vocÃª!
            %h3 Forgot your password?
            = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
              = f.error_notification
              .form-inputs
                = f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" } 
              .form-actions
                = f.button :submit, "Send me reset password instructions", class: 'btn text-white btn-block btn-primary'
              %br/
            = render "devise/shared/links"
